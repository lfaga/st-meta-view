<Window x:Class="st_meta_view.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:st_meta_view"
        mc:Ignorable="d"
        Title="Saftensors File Metadata Viewer" Height="300" Width="600"
        Style="{StaticResource DefaultWindowStyle}" Icon="/st-meta-view;component/Resources/app-icon.ico">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <Label x:Name="LblFilename" Content="Filename.safetensors" Grid.Column="0" />
      <Button x:Name="BtnFontSmaller" Grid.Column="1" Style="{StaticResource IconicButtonStyle}"
                  ToolTip="Decrease font size" Click="BtnFontSmaller_Click">
        <Image Source="{StaticResource BmpFontSmaller}" IsHitTestVisible="False" Stretch="None"/>
      </Button>
      <Button x:Name="BtnFontBigger" Grid.Column="2" Style="{StaticResource IconicButtonStyle}"
                  ToolTip="Increase font size" Click="BtnFontBigger_Click">
        <Image Source="{StaticResource BmpFontBigger}" IsHitTestVisible="False" Stretch="None"/>
      </Button>
    </Grid>
    <ScrollViewer Margin="4,1,4,4" Grid.Row="1" HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
      <Grid x:Name="RootGrid" />
    </ScrollViewer>
    <StatusBar x:Name="SbMessage" Grid.Row="2" MinHeight="20" />
  </Grid>
</Window>

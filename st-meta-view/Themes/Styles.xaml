<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
                    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit">

  <!-- Primary Color Brushes -->
  <SolidColorBrush x:Key="DarkestBrush" Color="#FF202020" />
  <SolidColorBrush x:Key="DarkBrush" Color="#FF404040" />
  <SolidColorBrush x:Key="MediumBrush" Color="#FF909090" />
  <SolidColorBrush x:Key="LightBrush" Color="#FFD9D9D9" />
  <SolidColorBrush x:Key="HighlightBrush" Color="#FF90E0FF" />


  <!-- Background Brushes -->
  <LinearGradientBrush x:Key="GradientDarkestBrush" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="#FF404040" Offset="0" />
    <GradientStop Color="#FF202020" Offset="1" />
  </LinearGradientBrush>

  <LinearGradientBrush x:Key="GradientDarkBrush" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="#FF303030" Offset="0" />
    <GradientStop Color="#FF505050" Offset="1" />
  </LinearGradientBrush>

  <LinearGradientBrush x:Key="GradientErrorBrush" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="#FF603030" Offset="0" />
    <GradientStop Color="#FF804040" Offset="1" />
  </LinearGradientBrush>

  <!-- DefaultWindowStyle -->
  <Style x:Key="DefaultWindowStyle" TargetType="Window">
    <Setter Property="Background" Value="{StaticResource GradientDarkestBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
  </Style>

  <!-- DefaultUserControlStyle -->
  <Style x:Key="DefaultUserControlStyle" TargetType="Control">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
  </Style>

  <Style x:Key="ErrorUserControlStyle" TargetType="Control">
    <Setter Property="Background" Value="{StaticResource GradientErrorBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
  </Style>

  <Style TargetType="TextBlock">
    <Setter Property="TextWrapping" Value="Wrap" />
    <Setter Property="MaxWidth" Value="420" />
  </Style>

  <!-- Default TextBox Stlye -->
  <Style TargetType="TextBox">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
    <Setter Property="CaretBrush" Value="{StaticResource LightBrush}" />
  </Style>

  <!-- Default Label Style -->
  <Style TargetType="Label">
    <Setter Property="Margin" Value="0" />
    <Setter Property="FontSize" Value="13" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource DarkBrush}" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>

  <Style x:Key="ClickableLabelStyle" TargetType="Label">
    <Setter Property="Margin" Value="0" />
    <Setter Property="FontSize" Value="13" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="BorderBrush" Value="{StaticResource DarkBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="true">
        <Setter Property="Foreground" Value="{StaticResource HighlightBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource LightBrush}" />
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="CustomLabelStyle" TargetType="Label">
    <Setter Property="Background" Value="{StaticResource GradientDarkestBrush}" />
    <Setter Property="Foreground" Value="{StaticResource MediumBrush}" />
    <Setter Property="FontSize" Value="13" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="FontFamily" Value="Arial" />
    <Setter Property="Padding" Value="2" />
    <Setter Property="MaxHeight" Value="40" />
    <Setter Property="VerticalAlignment" Value="Top" />
    <Setter Property="Cursor" Value="Hand" />
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="true">
        <Setter Property="Foreground" Value="{StaticResource HighlightBrush}" />
      </Trigger>
    </Style.Triggers>
  </Style>

  <!-- Default ComboBox Stlye -->
  <Style TargetType="ComboBox">
    <Setter Property="Background" Value="{StaticResource GradientDarkestBrush}" />
    <Setter Property="Foreground" Value="{StaticResource DarkestBrush}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontFamily" Value="Arial" />
    <Setter Property="Opacity" Value="0.5" />
  </Style>

  <Style TargetType="ComboBoxItem">
    <Setter Property="Background" Value="{StaticResource GradientDarkestBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <!-- Default Scrollbars Style -->
  <Style TargetType="ScrollBar">
    <Setter Property="Opacity" Value="0.5" />
    <Setter Property="Background" Value="{StaticResource DarkBrush}" />
  </Style>

  <!-- IconicButton Style -->
  <Style x:Key="IconicButtonStyle" TargetType="Button">
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="Width" Value="32" />
    <Setter Property="Background" Value="{StaticResource GradientDarkestBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource MediumBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Padding" Value="4" />
    <Style.Triggers>
      <Trigger Property="IsFocused" Value="True">
        <Setter Property="BorderBrush" Value="LightSkyBlue" />
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style TargetType="Button">
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource MediumBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>


  <!-- ListBox Style -->
  <Style TargetType="ListBox">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <Style TargetType="ListBoxItem">
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <!-- TreeView Style -->
  <Style TargetType="TreeView">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <Style TargetType="TreeViewItem">
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <Style TargetType="CheckBox">
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
    <Setter Property="FontSize" Value="12" />
  </Style>

  <!-- ListView Style -->
  <Style TargetType="ListView">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <Style TargetType="StatusBar">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
    <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
  </Style>

  <!-- Toolbar Styles -->
  <Style TargetType="ToolBarTray">
    <Setter Property="Background" Value="{StaticResource GradientDarkestBrush}" />
  </Style>

  <Style TargetType="ToolBar">
    <Setter Property="Background" Value="{StaticResource GradientDarkBrush}" />
  </Style>

  <Style TargetType="ToolBarOverflowPanel">
    <Setter Property="Background" Value="{StaticResource DarkBrush}" />
  </Style>
</ResourceDictionary>